<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/toolbar_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_margin="5dp"
            android:adjustViewBounds="true"
            android:src="@mipmap/notification_icon_white"
            android:visibility="gone"
             />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/toolbar_icon"
            android:text="Vehicle book"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@android:color/white" />

        <RelativeLayout
            android:id="@+id/notificationBell"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            >


            <ImageView
                android:id="@+id/imgSerach"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@mipmap/bell" />
            <TextView
                android:id="@+id/toolbarNotificationCount"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:textColor="@android:color/white"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:background="@drawable/notification_bell"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:padding="2dp"
                android:text="21" />


        </RelativeLayout>


    </RelativeLayout>

</LinearLayout>