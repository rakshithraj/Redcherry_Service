<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@android:color/white"
    android:paddingTop="10dp"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tvSuggest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="fsffdddddddddddddddddddffffffffffffffffffffffffffffffd"
        android:focusable="false"
        android:paddingLeft="2dp"
        android:paddingRight="2dp"
        android:textColor="#727272"
        android:textSize="16sp"
        android:layout_toRightOf="@+id/suggestion_icon"
        android:layout_toEndOf="@+id/suggestion_icon" />

    <ImageView
        android:id="@+id/suggestion_icon"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_centerVertical="true"
        android:background="@android:color/transparent"
        android:focusable="false"
        android:paddingLeft="2dp"
        android:paddingRight="2dp"
        android:src="@android:drawable/ic_menu_search" />
</RelativeLayout>